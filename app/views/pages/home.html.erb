<% unless params[:search] %>
  <%= render "banner" %>
<% end %>
<div class="container">
  <div class="row">
    <% if params[:search] %>
      <% @public_events.each do |pe| %>
        <% if pe.searchable.public %>
          <div class="col-xs-12 col-sm-4" style="margin-top: 12px;">
            <%= render "pages/event", event: pe %>
          </div>
        <% end %>
      <% end %>
    <% else %>
        <%= render "events/event" %>
    <% end %>
  </div>
  <div class="button">
    <%= link_to t("See More", default: "SEE MORE"), events_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<br>

