<% unless params[:search] %>
<%= render "banner" %>
<% end %>
<div class="text-center">
  <h2 style="margin-top: 60px; border-bottom: 2px solid #fcb215; display: inline-block;">Find events near you!</h2>
</div>
<!-- <div class="text-center" style="max-width: 100%; background-color: red; padding: 50px 30px 50px 80px;"><p>This is some text</p></div> -->
<div class="container">
  <div class="row">
    <% if params[:search] %>
    <% @public_events.each do |pe| %>
    <% if pe.searchable.public %>
    <div class="col-xs-12 col-sm-4" style="margin-top: 12px;">
      <%= render "pages/event", event: pe %>
    </div>
    <% end %>
    <% end %>
    <% else %>
    <%= render "events/event" %>
    <% end %>
  </div>
  <div class="button">
    <%= link_to t("See More", default: "See more"), events_path, class: "btn btn-default btn-lg" %>
  </div>
</div>
<br>

