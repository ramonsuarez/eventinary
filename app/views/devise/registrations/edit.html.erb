<div class="container" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <div class="panel panel-default">
          <div class="panel-heading">
            <strong>Sign up</strong>
          </div>
          <div class="panel-body">
            <form role="form" action="#" method="POST">
              <fieldset>
                <div class="row">
                  <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">
                          <i class="glyphicon glyphicon-user"></i>
                        </span>

                        <%= f.label :first_name, :class => "form-control" %><br />
                        <%= f.text_field :first_name, autofocus: true, :class => "form-control" %>

                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">
                          <i class="glyphicon glyphicon-user"></i>
                        </span>

                        <%= f.label :last_name, :class => "form-control" %><br />
                        <%= f.text_field :last_name, autofocus: true, :class => "form-control" %>

                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">
                          <i class="glyphicon glyphicon-user"></i>
                        </span>

                        <%= f.label :email, :class => "form-control" %><br />
                        <%= f.email_field :email, autofocus: true, :class => "form-control" %>

                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">
                          <i class="glyphicon glyphicon-lock"></i>
                        </span>

                        <%= f.label :current_password, :class => "form-control" %><br />
                        <%= f.password_field :current_password, autocomplete: "off", :class => "form-control" %>

                      </div>
                    </div>
                    <h5>If you want to change your password</h5>
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">
                          <i class="glyphicon glyphicon-lock"></i>
                        </span>

                        <%= f.label :password, :class => "form-control" %><br />
                        <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>

                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <span class="input-group-addon">
                          <i class="glyphicon glyphicon-lock"></i>
                        </span>

                        <%= f.label :password_confirmation, :class => "form-control" %><br />
                        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>

                      </div>
                    </div>
                    <div class="form-group">
                      <input type="submit" class="btn btn-lg btn-primary btn-block" value="Update">
                    </div>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
          <div class="panel-footer ">
            Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
          </div>
        </div>
      <% end %>
<%= link_to "Back", :back, :class => "btn btn-lg btn-primary btn-block" %>
    </div>
  </div>
</div>
