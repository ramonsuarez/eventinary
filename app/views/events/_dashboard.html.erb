<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <h1><%= @event.title %></h1>
      <h4><%= @event.organization.name unless @event.organization.nil? %></h4>
      <p><%= @event.start.strftime("%m/%d/%Y at %I:%M%p") %></p>

      <h6><%= social_share_button_tag(@event.title) %></h6>

      <%= link_to "Event Details", event_path(@event), class: "btn btn-primary" %>

      <div class="row">
        <h2>Event Dashboard</h2>
        <div class="col-md-8 wrapper-tickets">
          <ul class="collection">
          <h2>List of Attendants</h2>
            <% event.bookings.each do |booking| %>
            <div class="row">
              <div class="col-xs-12 col-md-8 col-md-offset-2">
                <li class="collection-item">
                  <%= cl_image_tag booking.user.avatar.path %>
                  <p><%= booking.user.full_name %></p>
                  <%= check_box_tag("attended", "yes", booking.attended)%>
                </li>
              </div>
            </div>
            <% end %>
          </ul>
        </div>

        <div class="col-md-4">
          <div class="wrapper-tickets">
            <h5>Tickets created: <%= event.quantity %></h5>
            <h5>Tickets booked: <%= event.bookings.count %> tickets</h5>
            <h5>Remaining Tickets: <%= event.quantity - event.bookings.count %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
