<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Online</th>
      <th>Online event</th>
      <th>Venue</th>
      <th>Address</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Postcode</th>
      <th>Country</th>
      <th>Show map</th>
      <th>Start</th>
      <th>End</th>
      <th>Image</th>
      <th>Description</th>
      <th>References</th>
      <th>Ticket name</th>
      <th>Quantity</th>
      <th>Penalty fee</th>
      <th>Cancellation policy</th>
      <th>Public</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.offline %></td>
        <td><%= event.online_url %></td>
        <td><%= event.venue %></td>
        <td><%= event.address %></td>
        <td><%= event.address_2 %></td>
        <td><%= event.city %></td>
        <td><%= event.state %></td>
        <td><%= event.postcode %></td>
        <td><%= event.country %></td>
        <td><%= event.show_map %></td>
        <td><%= event.start %></td>
        <td><%= event.end %></td>
        <td><%= event.image %></td>
        <td><%= event.description %></td>
        <td><%= event.ticket_name %></td>
        <td><%= event.quantity %></td>
        <td><%= event.penalty_fee %></td>
        <td><%= event.cancellation_policy %></td>
        <td><%= event.public %></td>
        <td><%= event.price %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

