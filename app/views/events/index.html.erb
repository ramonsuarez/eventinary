<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
    <th>title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr> <!-- We need some css work here! -->
      <td><%= event.title %></td>
        <td><%= link_to event_path(event) do %></td>
        <td><%= cl_image_tag(event.image.path, { size: '125x125', crop: :fit }) %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

