<!-- Stripe success page -->
<div class="events-sucess-page">
  <div class="container">
    <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3"  style="padding-bottom: 20px; background: white">
        <h3 class="text-left">No-show fee sent to : </h3>
        <ul class="collection text-left">
          <% @noshow_bookings.each do |booking| %>
            <li class="collection-item">
            <%= cl_image_tag booking.user.avatar.path if booking.user.avatar %>
            <p><%= booking.user.full_name %></p>
          <% end %>
        </ul>
        <div class="text-center" style="margin: 0 auto"><%= link_to "Back to the event", admin_event_path(@event), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
