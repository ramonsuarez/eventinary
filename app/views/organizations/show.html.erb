<% cloudinary_path = "http://res.cloudinary.com/serendipity/image/upload/" %>

<section class="organizations-page">
  <div class="container">

    <% if @organization.logo != nil %>
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
          <div class="avatar" style="background-image: url('<%= cloudinary_path + @organization.logo.path %>');"></div>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <h3><%= @organization.name %></h3>
        <h4><%= @organization.url %></h4>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-1 col-md-offset-2 text-right">
        <h4><i class="fa fa-envelope" aria-hidden="true"></i></h4>
      </div>
      <div class="col-xs-11 col-md-6">
        <h4><%= @organization.email %></h4>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-1 col-md-offset-2 text-right">
        <h4><i class="fa fa-phone" aria-hidden="true"></i></h4>
      </div>
      <div class="col-xs-11 col-md-6">
        <h4><%= @organization.phone %></h4>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-8 col-md-offset-2">
        <hr/>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-1 col-md-offset-2 text-right">
        <h4><i class="fa fa-file-text-o" aria-hidden="true"></i></h4>
      </div>
      <div class="col-xs-11 col-md-6">
        <h4>Description:</h4>
        <p><%= @organization.description %></p>
      </div>
    </div>

    <% if user_signed_in? %>
      <div class="row">
        <div class="col-xs-12 col-md-8 col-md-offset-2">
          <hr/>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 text-center">
          <%= link_to 'Edit', edit_organization_path(@organization) %>
        </div>
      </div>
    <% end %>

  </div>
</section>
